# nginx + unicorn application vhost
#
# Generated by Capistrano for <%= application %>
# Local modifications will be overwritten.

upstream <%= application %> {
  server 127.0.0.1:<%= unicorn[:port] %> fail_timeout=0;
}

server {
  listen <%= nginx_cfg[:port] %>;
  log_subrequest on;
  
  server_name <%= instance %> <%= nginx_cfg[:more_server_names] %>;
  
  client_max_body_size 4G;

  keepalive_timeout 5;

  root <%= current_dir %>/public;

  try_files $uri $uri/index.html $uri.html @main;

  location @main {
    proxy_pass http://<%= application %>;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_intercept_errors on;
    break;
  }

}
